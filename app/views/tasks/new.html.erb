<div class="container col-4 ">
<h1 class= "text-center">New Task</h1>
  <%= simple_form_for @task do |f| %>
    <%= f.input :title %>
    <%= f.input :details%>
     <%= f.submit "Update", class: "btn btn-secondary" %>
  <% end %>
  <br>
  <br>
  <%= link_to tasks_path(@task) do%>
    <i class="fas fa-arrow-alt-circle-left"> Back to Tasks</i>
  <% end %>
</div>
